@model NewLife.CMX.ICategory
@{
    var Titles = Model as IList<IInfo>;
    var Pager = ViewBag.Pager as Pager;
}
<div class="container" style="min-height: 600px;">
    <div class="row">
        @Html.Partial("_Nav")
    </div>
    <h2 class="tith2">
        @Model.Name
    </h2>
    @{
        var childs = Model.Childs;
        if (childs.Count > 0)
        {
            foreach (ICategory cat in childs)
            {
                <div class="widget2 fixed">
                    <h2 class="tit">
                        <em>@cat.Name</em>
                        <small style="float: right;">
                            <a href="@this.GetCategoryUrl(cat)">更多 &gt;&gt;</a>
                        </small>
                    </h2>
                    <div class="content">
                        <ul class="list_news_dl fixed">
                            @foreach (var title in cat.GetTitles())
                            {
                                <li>
                                    <a href="@this.GetUrl(title)">
                                        <i></i>@title.Title
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        }
        else
        {
            <ul class="list_news_dl fixed">
                @foreach (var item in Titles)
                {
                    <li>
                        <a href="@this.GetUrl(item)">
                            <i></i>@item.Title
                        </a>
                    </li>
                }
            </ul>
            if (Pager.PageCount > 1)
            {
                <div class="page">
                    <span class="cor01">页数：@Pager.PageIndex/@Pager.PageCount</span>
                    <a class="first" href="@(this.GetCategoryUrl(Model))" title="首页">首页</a>
                    @if (Pager.PageIndex > 1)
                    {
                        <a class="prev" title="上一页" href="@(this.GetCategoryUrl(Model, Pager.PageIndex - 1))">&lt;</a>
                    }
                    @for (int i = 1; i <= Pager.PageCount; i++)
                    {
                        if (i == Pager.PageIndex)
                        {
                            <a class="on">@i</a>
                        }
                        else
                        {
                            <a href="@(this.GetCategoryUrl(Model, i))">@i</a>
                        }
                    }
                    @if (Pager.PageIndex < Pager.PageCount)
                    {
                        <a class="next" title="下一页" href="@(this.GetCategoryUrl(Model, Pager.PageIndex + 1))">&gt;</a>
                    }
                    <a class="first" title="末页" href="@(this.GetCategoryUrl(Model, Pager.PageCount))">末页</a>
                </div>
            }
        }
    }
</div>
