@{
    var category = Model as IEntityCategory;
    if (category == null)
    {
        category = (Model as IEntityTitle).Category;
    }
}
<ol class="breadcrumb">
    <li><a href="~/">首页</a></li>
    @foreach (IEntityCategory cat in category.AllParents)
    {
        <li>
            <a href="@this.GetCategoryUrl(cat)">@cat.Name</a>
        </li>
    }
    <li class="active">
        <a href="@this.GetCategoryUrl(category)">@category.Name</a>
    </li>
</ol>