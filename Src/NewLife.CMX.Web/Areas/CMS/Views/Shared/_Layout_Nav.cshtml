@using NewLife.CMX;
@{
    var chn = ViewBag.Channel as Channel;
    var cat = ViewBag.Category as IEntityCategory;
}
<i class="ace-icon fa fa-home home-icon"></i>
<a href="@Url.Action("Index", new { channel = chn.ID, category = cat.ID })" class="h4"><strong>@chn.Name</strong></a>
@if (cat != null)
{
    foreach (IEntityCategory item in cat.AllParents)
    {
        if (item.ID != 0)
        {
            <text>&nbsp;/&nbsp;</text>
            <a href="@Url.Action("Index", new { channel = chn.ID, category = item.ID })" class="h4">@item.Name</a>
        }
    }
}
